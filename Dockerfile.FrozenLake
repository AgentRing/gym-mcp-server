# Dockerfile for gym-mcp-server with FrozenLake-v1
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for gymnasium, plus curl for health check
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy project files (including README.md required by pyproject.toml)
COPY pyproject.toml README.md ./
COPY gym_mcp_server/ ./gym_mcp_server/

# Install the package and dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir . && \
    pip install --no-cache-dir gymnasium[classic_control]

# Expose port 8000 for the HTTP server
EXPOSE 8000

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV NUM_EPISODES=10
ENV MAX_STEPS_PER_EPISODE=100

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the server with FrozenLake-v1 and run manager enabled
# Run manager is enabled by default with configurable episodes and max steps
CMD ["sh", "-c", "python -m gym_mcp_server --env FrozenLake-v1 --host 0.0.0.0 --port 8000 --num-episodes ${NUM_EPISODES} --max-steps-per-episode ${MAX_STEPS_PER_EPISODE}"]

